<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <!-- TODO: Make visible if user is a moderator -->
        <TextView
            android:id="@+id/lblPermissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Moderator"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/Purdue_Black"
            android:visibility="visible" />

        <!-- Profile image -->
        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/lblPermissions"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"/>

        <!-- Member Name -->
        <TextView
            android:id="@+id/lblMemberName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imgProfilePic"
            />

        <!-- Add/Remove Moderator permissions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/lblMemberName"
            android:orientation="vertical">


            <!-- TODO: Add functionality -->
            <Button
                android:id="@+id/btnAddPermissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/btnRemovePermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"/>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>